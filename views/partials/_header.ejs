<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-info">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
  
      <% if (user) { %>
      
        <h5 style="margin-right: 1em; margin-top: 0.5em;">Logged in as <%= user.email %>   </h5>
 
          <form class="form-inline" method="POST" action="/logout">
            <input type="submit" value="Log out" class="btn btn-outline-dark">
          </form>
       

        <% } else if (!user) { %>
        
          <h5>Not logged in</h5>
  
            <form class="form-inline" method="POST" action="/login">
              <input type="text" placeholder="Enter username" class="form-control" type="text" name="username" style="width: 300px; margin-left: 1em; margin-right: 1em" />
              <input type="submit" value="Log In" class="btn btn-outline-dark">
            </form>

          <% } %>
    


  </nav>
</header>